<div class="relative h-full max-h-screen min-w-0 py-10 overflow-x-hidden px-4 md:px-28">
  <div class="main-container">
    <div class="w-full m-auto">
      <h1 class="mb-3 text-5xl font-semibold text-gray-700">Todos</h1>
      <div class="py-4 font-medium text-gray-400">
        <p>Make lists of work that needs to get done, assign items, set due dates, and discuss.</p>
      </div>
      <div class="flex justify-end pb-2">
        <%= link_to "NEW", new_project_todo_list_path, class:"theme-fill-btn", data: { remote: true }%>
      </div>
    </div>
    <div class="p-4 m-auto mb-4 border-t border-gray-300">
    </div>
    <div class="container grid grid-cols-1 lg:grid-cols-3 gap-4 max-w-full">
      <ul class="list todos">
        <div class="w-auto px-4 py-4">
            <span class="todo-status-title bg-pink-200 rounded-lg p-2">Todos</span>
            <div class="flex flex-col text-2xl text-center flex-col-3 pt-4 gap-2" data-controller="sortable" data-sortable-status-value="a">
                <% @todo_lists.each do |todo_list| %>
                  <% if todo_list.status === 'todos'  %>
                  <h5 class=" mb-2 text-xl font-medium leading-tight text-yellow-600" status="todos" data-id="<%= todo_list.id %>">
                    <li class="todo-content">
                      <td><%= link_to todo_list.title, project_todo_list_path(@project ,todo_list), class:'text-gray-600 text-xl handle' %></td>
                        <%= link_to project_todo_list_path(@project, todo_list ) , method: "DELETE"  do %>
                        <i class="text-lg far fa-trash-alt"></i>
                        <% end %>
                    </li>
                  </h5>
                <% end %>  
              <% end %>
            </div>
        </div>
      </ul>
      <ul class="list doing">
        <div class="w-auto px-4 py-4" >
          <span class="todo-status-title bg-yellow-200 rounded-lg p-2">Doing</span>
          <div class="flex flex-col text-2xl text-center  flex-col-3 pt-4 gap-2" data-controller="sortable" data-sortable-status-value="b">
          <% @todo_lists.each do |todo_list| %>
                    <% if todo_list.status === 'doing' %>
                      <h5 class="mb-2 text-xl font-medium leading-tight text-yellow-600" data-id="<%= todo_list.id %>">
                        <li class="todo-content">
                          <td><%= link_to todo_list.title, project_todo_list_path(@project ,todo_list),class:'text-gray-600 text-xl handle ' %></td>
                          <%= link_to project_todo_list_path(@project, todo_list ) , method: "DELETE"  do %>
                          <i class="text-lg far fa-trash-alt"></i>
                          <% end %>
                        </li>
                      </h5>
                    <% end %>  
                  <% end %>
            </div>
        </div>
      </ul>
      <ul class="list done">
        <div class="w-auto px-4 py-4">
          <span class="todo-status-title bg-green-200 rounded-lg p-2">Finish</span>
            <div class="flex flex-col text-2xl text-center flex-col-3 pt-4 gap-2" data-controller="sortable" data-sortable-status-value="c">
            <% @todo_lists.each do |todo_list| %>
                    <% if todo_list.status === 'done' %>
                      <h5 class="mb-2 text-xl font-medium leading-tight text-yellow-600" data-id="<%= todo_list.id %>">
                        <li class="todo-content">
                          <td><%= link_to todo_list.title, project_todo_list_path(@project ,todo_list),class:'text-gray-600 text-xl handle' %></td>
                          <%= link_to project_todo_list_path(@project, todo_list ) , method: "DELETE"  do %>
                          <i class="text-lg far fa-trash-alt"></i>
                          <% end %>
                        </li>
                      </h5>
                    <% end %>  
                  <% end %>
            </div>
        </div>
      </ul>
    </div>
  </div>
</div>
