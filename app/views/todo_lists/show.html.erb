<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <%# todo-item-card-head-start %>
  <div class="flex justify-between align-middle px-4 py-5 sm:px-6">
    <div>
    <%# back icon %>
      <%= link_to project_todo_lists_path, class: 'bg-gray-500 hover:bg-blue-700 text-white font-bold py-2 px-4 pt-2 rounded' do %>
        <i class="fas fa-chevron-circle-left"></i>
      <% end %>
    </div>
    <div class="text-center">
    <%# heading %>
      <h2 class="text-lg leading-6 font-medium text-gray-900"><%= @todo_list.title %></h2>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">
        <%= @todo_list.percent_complete %>%Todo完成(<%= @todo_list.completed_items %>/<%= @todo_list.total_items %>)
      </p>
    </div>
    <div>
    <%# revise BTN %>
      <button class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300">
        <%= link_to '修改', edit_project_todo_list_path(@todo_list) %>
      </button>
    </div>
  </div>
  <%# todo-item-card-head-end %>
  <%# todo-item-card-complete-percentage-start %>
  <div class="flex h-2 mb-4 overflow-hidden text-xs rounded bg-amber-200">
    <div style="width: <%= @todo_list.percent_complete %>%" class="flex flex-col justify-center text-center text-white bg-yellow-500 shadow-none whitespace-nowrap"></div>
  </div>
  <%# todo-item-card-complete-percentage-end %>
  <%# todo-item-card-add-new-item-start %>
  <%= form_for([@project, @todo_list, @todo_item]) do |form| %>
    <div class=" flex flex-row align-baseline px-4 py-5 bg-white space-y-6 sm:p-6">
      <div class="flex-grow m-4">
        <%= form.text_field :description, class:"shadow-sm focus:ring-yellow-500 focus:border-yellow-500 mt-1 block w-full h-10 sm:text-sm border border-gray-300 rounded-md",placeholder:"新增todo" %>
      </div>
      <div class="">
        <%= form.submit '新增', class:'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-300' %> 
      </div>
    </div>
  <% end %>
  <%# todo-item-card-add-new-item-end %>
  <%# todo-item-card-body-start %>
      <div class="flex">
      <ul class="w-full list-group divide-y divide-gray-200">
        <% @todo_list.todo_items.each do |todo_item| %>
        <% if todo_item.completed? %>
          <li class="w-full list-group-item">
            <div class="flex justify-evenly hover:bg-gray-50 w-full mb-2 border-2 border-yellow-400 rounded-lg border-double">
                <span class="cursor-default">
                <%= todo_item.description %></span>
                <%= link_to '#', class:'bg-white', data: { reflex: 'click->TodoItem#todo_incomplete', id: todo_item.id } do %>
                  <i class="fas fa-undo"></i>
                <% end %>
            </div>
          </li>
          <% else %>
          <li class="flex w-full list-group-item">
            <div class="flex justify-around  hover:bg-gray-50 w-full mb-2 border-2 border-yellow-400 rounded-lg border-double">
                <span><%= todo_item.description %></span>
                <%= link_to '#', class: 'bg-white', data: { reflex: 'click->TodoItem#todo_complete', id: todo_item.id } do %>
                  <i class="fas fa-check"></i>
                <% end %>
                <div class="block">
                <%= link_to '刪除', project_todo_list_todo_item_path(@project, @todo_list, todo_item.id ), method: "delete" %>
                </div>
            </div>
          </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <%# todo-item-card-body-end %>
</div>
