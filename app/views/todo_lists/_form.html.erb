<div class="container flex flex-wrap">

<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <%# <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2> %>

      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="flex row">

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <button class="px-4 font-bold text-white bg-blue-500 rounded hover:bg-blue-700">
      <%= form.submit '更新TodoList' %>
    </button>
  </div>
</div>
<% end %>
</div>
