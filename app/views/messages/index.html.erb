<section>
<div class="px-4 pt-16 pb-20 bg-white sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
  <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
    <div>
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">Message Board</h2>
      <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
          <div class="flex flex-shrink-0 w-full mt-2 rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto sm:inline-flex">
              <%= link_to "新增message", new_project_message_path(@project) , class:"inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded-full shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"%>
          </div>
      </div>
    </div>
    <div class="h-5 p-6 m-auto border-t border-black"></div>
  </div>
  <div class="container p-6 m-auto">
    <div class="relative grid grid-flow-row grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 ">
    <% @messages.each do |message| %>
      <%= link_to project_message_path(@project ,  message), class: 'flex items-center justify-center bg-white rounded-lg relative 
                                                border-2 border-gray-400 drop-shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 
                                                dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700' do  %>
        <div class="justify-between block p-4 leading-normal">
          <div class="pt-16"></div>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= message.title%></h5>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= message.content %></p>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
</section>



