<div class="px-4 md:px-28 py-10 min-w-0 overflow-x-hidden max-h-max bg-theme-5">
  <div class="main-container">
    <div class="m-auto w-full">
      <h1 class="text-5xl mb-3 font-semibold text-gray-700">Message Board</h1>
      <div class="font-medium text-gray-400 py-4">
        <p>Post announcements, pitch ideas, progress updates, etc. and keep feedback on-topic.</p>
      </div>
      <div class="flex justify-end pb-2">
         <%= link_to "NEW", new_project_message_path(@project) , class:"theme-fill-btn"%>
      </div>
    </div>
    <div class="p-4 m-auto mb-4 border-t border-gray-300">
    </div>
  </div>
  <div class="main-container p-6 m-auto">
    <div class="relative grid grid-flow-row grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 ">
    <% @messages.reverse.each do |message| %>
      <%= link_to project_message_path(@project,  message), class: 'relative mb-card text-left' do  %>
        <div class="w-full block text-left p-4">
          <h5 class="truncate text-2xl text-left font-bold 
                       text-gray-900 dark:text-white"><%= message.title%></h5>
          <p class="w-full py-4 font-normal text-gray-700 
                    truncate dark:text-gray-400" >
            <%= (message.content) %>
          </p>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>



