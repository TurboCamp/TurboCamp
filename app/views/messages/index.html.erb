<section class="px-28 py-10 h-full min-w-0 overflow-hidden max-h-screen">
  <div class="px-4 pt-16 pb-20 bg-white sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
    <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
      <div class="flex justify-between mb-4 px-3 ">
        <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">Message Board</h2>
        <div class="flex flex-shrink-0 w-full mt-2 rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto sm:inline-flex">
           <%= link_to "新增message", new_project_message_path(@project) , class:"theme-fill-btn"%>
        </div>
      </div>
      <div class="h-5 p-6 m-auto border-t border-black"></div>
    </div>
    <div class="container p-6 m-auto">
      <div class="relative grid grid-flow-row grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 ">
      <% @messages.each do |message| %>
        <%= link_to project_message_path(@project ,  message), class: 'mb-card text-left' do  %>
          <div class="block text-left p-4 leading-normal">
            <div class="pt-6"></div>
            <h5 class="w-full mb-2 text-2xl text-left font-bold tracking-tight text-gray-900 dark:text-white"><%= message.title%></h5>
            <p class="w-full mb-3 font-normal text-gray-700 dark:text-gray-400"><%= message.content %></p>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
</section>



