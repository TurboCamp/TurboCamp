<div class="message-boards-container">
  <div class="message-box">
    <div class="text-center">
      <h2 class="h2">Docs & Files</h2>
    </div>
    <div class="flex justify-center mt-5">
      <button class="button">
        <%=link_to "New", new_bucket_path%>
      </button>
    </div>
    <div class="message-wrap lg:grid-cols-3 lg:max-w-none">
      <% @buckets.each do |bucket|%>
        <%=link_to  bucket_path(bucket.id) do %>
          <% if bucket.attach.attached? %>
            <div class="message-card">
              <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                <div class="flex-1">
                  <div class="block mt-2">
                    <h3 class="h3"><%= bucket.title%></h3>
                    <p class="p"><%=image_tag bucket.attach%></p>
                    
                  </div> 
                </div>
          <% else %>
                  <div class="block mt-2">
                    <h3 class="h3"><%= bucket.title%></h3>
                    <p class="p"><%= bucket.content%></p>
                  </div> 
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>