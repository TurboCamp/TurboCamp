<div class="px-28 py-10 h-full min-w-0 overflow-x-hidden max-h-screen relative">
  <h2 class="h2">
          Doc & Files
  </h2>
  <div class="mt-6" data-controller="upload-file">
    <button class="m-0 p-1.5 bg-gray-300 text-center rounded-sm relative" data-action="click->upload-file#upload">上傳檔案</button>
    <%= render 'form' %>
  </div>
  <article class="mt-4 rounded-lg border border-gray-300 relative py-8 bg-white overflow-hidden flex justify-center">
    <div class="relative px-4 sm:px-6 lg:px-8">
      <div class="mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto flex gap-4 flex-wrap">
        <% @documents.each do |doc| %>
          <div class="border border-gray-300 rounded-lg p-6 max-w-max mr-0 flex relative w-72 h-64">
            <% if doc.document.mime_type.include? 'image' %>
              <%= image_tag(doc.document_url , size:'150x150' , class:'rounded-lg')%>
            <% else %>
              <%= link_to doc.document.metadata["filename"], doc.document.download_url , download:"", class: "inline-block other-file" unless doc.document.mime_type.include? "image" %>
            <% end %>  
            <a href="<%=doc.document.download_url%>" download="" class='absolute bottom-1 left-1'>
              <i class="fas fa-cloud-download-alt text-2xl"></i>
            </a>
            <%= link_to project_bucket_document_path(@project , doc.id ) , method: "DELETE" ,class:"absolute top-2 right-2" do %>
              <i class="far fa-trash-alt text-2xl"></i>
            <% end %>
          </div> 
        <% end %>
      </div>
    </div>
  </article>
</div>
