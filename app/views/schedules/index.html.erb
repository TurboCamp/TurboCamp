<div class="relative h-full max-h-screen min-w-0 px-4 py-10 md:px-28">
  <div class="main-container">
    <div class="w-full m-auto">
      <h1 class="mb-3 text-5xl font-semibold text-gray-700">Schedule</h1>
      <div class="py-4 font-medium text-gray-400">
        <p>Set important dates on a shared schedule.</p>
      </div>
    </div>
    <div class="p-4 m-auto mb-4 border-t border-gray-300">
    </div>
    <div id="changeStatus">
      <select id="schedule" class="block w-1/5 p-2 mb-2 font-bold border-2 rounded border-theme-200">
        <option selected value="month">Monthly</option>
        <option value="week">Weekly</option>
        <option value="day">Day</option>
      </select>
    </div>
    <div data-controller="calendar" class="border border-gray-500 rounded-lg calendar" data-schedule="<%= @schedules.to_json %>">
      <div id="calendar"></div>
    </div>
  </div>
</div>
