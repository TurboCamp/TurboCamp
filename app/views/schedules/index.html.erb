<div class="relative h-full max-h-screen min-w-0 py-10 overflow-x-hidden px-4 md:px-28">
  <div class="main-container">
    <div class="w-full m-auto">
      <h1 class="mb-3 text-5xl font-semibold text-gray-700">Schedule</h1>
      <div class="py-4 font-medium text-gray-400">
        <p>Set important dates on a shared schedule.</p>
      </div>
      <div class="flex justify-end pb-2">
        <%= link_to "NEW", new_project_schedule_path, class:"theme-fill-btn"%>
      </div>
    </div>
    <div class="p-4 m-auto mb-4 border-t border-gray-300">
    </div>
    <div id="changeStatus">
      <select id="schedule" class="block w-1/5 mb-2 border-2">
        <option selected>Open this select menu</option>
        <option value="month">Monthly</option>
        <option value="week">Weekly</option>
        <option value="day">Day</option>
      </select>
    </div>
    <div class="h-1/2">
      <div data-controller="calendar" id="calendar"  data-schedule="<%= @schedules.to_json %>">
      </div>
    </div>
  </div>
</div>
