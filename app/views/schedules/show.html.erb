<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">


    <%= render @schedule %>

    <%= link_to '修改行程', edit_schedule_path(@schedule), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to '刪除行程', schedule_path(@schedule), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to '回到行事曆', schedules_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
