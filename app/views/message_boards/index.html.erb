
<div class="bg-white pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
  <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
    <div>
      <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">Message Board</h2>
      <div class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center">
        <form class="mt-6 flex flex-col sm:flex-row lg:mt-0 lg:justify-end">
          <div class="mt-2 flex-shrink-0 w-full flex rounded-md shadow-sm sm:mt-0 sm:ml-3 sm:w-auto sm:inline-flex">
            <%= button_to 'New messages',new_message_path, method: :get, action: "new", class:'w-full bg-indigo-600 px-4 py-2 border border-transparent rounded-md flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto sm:inline-flex' %>
          </div>
        </form>
      </div>
    </div>
    <% @messages.each do |message|%>
      <% if message.public? %>
        <div class="mt-6 pt-10 grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
          <div>
            <p class="text-sm text-gray-500">
              <time datetime="2020-03-16"><%= message.updated_at%></time>
            </p>
            <div class="mt-2 block">
              <h2 class="text-xl font-semibold text-gray-900"><%= message.title%> </h2>
              <p class="mt-3 text-base text-gray-500"><%= message.content%></p>
            </div>
            <div class="mt-3">
              <%= link_to "Read More", message_path(message.id), class:"ttext-base font-semibold text-indigo-600 hover:text-indigo-500"%>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

