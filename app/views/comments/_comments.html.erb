  <% commentable.comments.each do |comment| %>
    <div class="px-4 pb-3 my-2 pt-8 w-full border-t border-gray-300 flex justify-start items-start">
      <div class="h-14 w-14 rounded-full overflow-hidden">
          <%= image_tag(comment.user.avatar_url || comment.user.imageurl, size:'32x32' , class:'w-full h-full') %>
      </div>
      <div class='pl-4 py-2 w-4/5'>
        <div class="text-2xl font-semibold">
          <%= comment.user.nickname %>
        </div>
        <div class="text-xl py-2">
          <%= comment.content %> 
        </div>
      </div>
      <div class="pr-4">
        <%= link_to '刪除', project_message_comment_path(@project, @message, comment.id), method: 'delete'  %>
        <%= link_to '修改', edit_project_message_comment_path(@project, @message, comment.id) %>
      </div>
    </div>
  <% end %>

