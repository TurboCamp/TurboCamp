  <div
    data-controller="notification"
    data-notification-delay-value="5000"
    class="fixed top-24 right-14 transform duration-1000 hidden"
    data-transition-enter-from="opacity-0 -translate-y-6"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 -translate-y-0"
    data-transition-leave-to="opacity-0 translate-y-6"
    role="alert">
    <% flash.each do |type, msg| %>
    <div class="max-w-xs p-4 bg-orange-100 border-l-4 border-orange-500 text-orange-700 rounded flex justify-between items-center">
      <div class="flash flash-<%= type %>">
        <p class="px-4 py-2 font-medium"><%= msg %></p>
      </div>
      <button data-action="notification#hide">
        <%= icon_tag('fa-regular fa-circle-xmark pr-3 hover:text-orange-500') %>
      </button>
    </div>
    <% end %>
  </div>
