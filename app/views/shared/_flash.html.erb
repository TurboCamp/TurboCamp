<% flash.each do |type, msg| %>
    <div
  data-controller="notification"
  data-notification-delay-value="2000"
  class="transition transform duration-1000 hidden"
  data-transition-enter-from="opacity-0 translate-x-26"
  data-transition-enter-to="opacity-100 translate-x-0"
  data-transition-leave-from="opacity-100 translate-x-0"
  data-transition-leave-to="opacity-0 translate-x-26"
 class="px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50">
  <div class="flash text-center flash-<%= type %>">
    <span class="px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50"><%= msg %></span>
  </div>
<% end %>


