<section class="max-w-3xl mr-auto ml-auto border-gray-500 border p-3 rounded-lg shadow-lg" data-controller="chat-room-channel" data-id="<%= @project.chat_room.id %>" > 
    <h2 class="text-xl font-semibold"><%= @project.title %>專案的聊天室</h2>
    <br>
    <section class="h-96 overflow-auto " data-chat-room-channel-target="contentbox" >
        <div id="content" class="m-4">
            <% @contents.each do |content|%>
            <div class="mt-5" data-chat-room-channel-target="textarea">
                <div class="w-max">
                    <span class="text-xs" data-chat-room-channel-target="nickname"><%= content.user %></span>
                    <div class="px-3 py-2 bg-gray-200 opacity-3 rounded-lg w-max" >
                        <%= content.text %>
                        <%= link_to content.image_url do %>
                            <%= image_tag(content.image_url , size:'150x150') if content.image %>
                        <% end %>
                    </div>
                </div>
            </div> 
            <% end %>
        </div>
        </section>
       <%= render 'form' %>
</section>





