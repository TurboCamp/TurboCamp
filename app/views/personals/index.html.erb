<section>
  <div class="m-auto w-11/12">
    <div class="flex justify-end pt-11 pb-3">
      <%= theme_button new_project_path, 'NEW'  %>
    </div>
    <div class="p-6 m-auto h-5 border-t border-black"></div>
  </div>
  <div class="p-2">
    <div class=" max-w-screen-sm m-auto p-5 grid grid-cols-1 md:grid-cols-2 md:min-w-max lg:grid-cols-3 lg:min-w-max 2xl:grid-cols-4 2xl:min-w-max gap-9 grid-flow-row ">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: 'flex w-96 h-64 items-center justify-center bg-white rounded-lg relative 
                                                border-2 border-gray-400 drop-shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 
                                                dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700' do  %>
        <div class="flex flex-col justify-between p-4 leading-normal">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= project.title%></h5>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= project.description %></p>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
</section>

