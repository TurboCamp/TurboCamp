<div class="m-auto w-5/6">
  <div class="flex justify-end pt-11 pb-3">
    <%= theme_button new_project_path, 'NEW'  %>
  </div>
  <div class="p-6 m-auto h-5 border-t border-black"></div>
</div>

<div class="w-5/6 m-auto relative flex flex-wrap justify-between  gap-4 p-4 items-center ">
<% @projects.each do |project| %>
  <%= link_to project_path(project), class: 'flex flex-row w-96 h-64 items-center bg-white rounded-lg 
                                            border-2 border-gray-400 drop-shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 
                                            dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700' do  %>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= project.title%></h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= project.description %></p>
    </div>
  <% end %>
<% end %>

</div>

<section class="mt-10 flex justify-center">
<% @projects.each do |project| %>
<%= link_to project_path(project) do  %>

<div class="p-4 flex gap-4">
  <div class="border-r border-b border-l border-t border-gray-400  p-4 flex flex-col justify-between leading-normal mr-auto ml-auto shadow-lg">
    <div class="mb-8">
      <p class="text-sm text-gray-600 flex items-center">
        <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
        </svg>
        Personal Project
      </p>
      <div class="text-gray-900 font-bold text-xl mb-2"> <%= project.title%></div>
      <p class="text-gray-700 text-base"><%= project.description%></p>
    </div>
    <div class="flex items-center">
      <div class="text-sm">
        <% project.users.each do |user| %>
        <div class="text-gray-900">
        <% if user.avatar.attached? %>
           <%= image_tag(url_for(user.avatar), size:'25x25' , class:'rounded-full') %>
        <% else %>
           <% if user.imageurl != nil %>
            <%= image_tag(url_for(user.imageurl) , size:'25x25' , class:'rounded-full') %>
          <% else %>
            <%= image_tag('default_user', size:'25x25' , class:'rounded-full') %>
            <% end %>
        <% end %>
        </div>
        <% end %>
        <p class="text-gray-600"><%= local_time(project.updated_at ,"%y/%m/%d %h:%m") %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>
</section>
