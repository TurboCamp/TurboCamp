<div class="flex justify-center m-auto" data-controller="preview">
<%= form_with(model: @user ,url:users_info_path , method: :post ) do |f| %>
  <div class="w-40 h-40 rounded-full overflow-hidden m-auto mb-6 mt-0">
      <%= f.label :avatar , '上傳個人頭貼' , class:"relative block tracking-wide text-gray-700 text-xs font-bold mb-2 text-lg w-40 h-40" do %>
        <%= image_tag(@user.avatar_url || "default_user" , data:{preview_target:"output"} , class:"w-full h-full")%>
      <% end %>
  </div>
  <div class="mb-3">
      <%= f.file_field :avatar , data:{preview_target:"input", action:"change->preview#readURL"} , class:"hidden"%>
  </div>
  <div class="mb-3">
      <%= f.label :nickname , '暱稱' , class:"block tracking-wide text-gray-700 text-xs font-bold mb-2 text-lg"%>
      <%= f.text_field :nickname , class:"border p-1 border-gray-300 rounded-md" %>
  </div>
  <%= f.submit '更新個人資料' ,class:"theme-fill-btn"%>
<% end %>
</div>

