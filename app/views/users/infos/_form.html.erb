<div class="flex justify-center m-auto">
<%= form_with(model: @user ,url:users_info_path , method: :post ) do |f| %>
  <% if @user.avatar %>
  <div>
      <%= image_tag(@user.avatar_url, size:'200x200' , class:'rounded-full') %>
  </div>
  <% else %>
      <%= image_tag('default_user' , size:'200x200' , class:'rounded-full')%>
  <% end %>
  <div>
      <%= f.label :avatar , '上傳個人頭貼' %>
      <%= f.file_field :avatar %>
  </div>
  <div>
      <%= f.label :nickname , '暱稱' %>
      <%= f.text_field :nickname %>
  </div>
  <%= f.submit '更新個人資料'%>
<% end %>
</div>

