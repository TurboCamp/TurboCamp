<section class="bg-theme-5">
  <div class="flex overflow-hidden min-h-full py-2 sm:py-8">
    <div class="devise-container">
      <h1 class="devise-title">Sign up</h1>
      <div class="px-8 pt-2">
        <%= render 'devise/shared/auth'%>
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class:'bg-theme-5 px-8 pt-1'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="py-1 mb-3 border-b border-gray-300"></div>
        <div class="devise-label">
          <%= f.label :nickname, 'Name', class:'font' %>
          <%= f.text_field :nickname, placeholder: 'Enter your name...', class:'field'%>
          <%= f.label :email, 'Email', class:'font' %>
          <%= f.email_field :email, placeholder: 'Enter your email address...', class:'field'%>
          <%= f.label 'Password', class:'font' %>
          <%= f.password_field :password, placeholder: 'Enter your password...', class:'field' %>
        </div>
        <%= f.submit 'Sign up', class:'devise-fill-btn mt-4' %>
        <div class="py-5 flex justify-center text-gray-500 text-sm">
          <p>Already has an account?</p>
          <%= link_to 'Sign in', new_user_session_path, class: 'px-2 underline hover:text-theme-150'%>
        </div>
      <% end %>
    </div>
  </div>
</section>

