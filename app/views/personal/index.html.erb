<section>
  <div class="m-auto w-11/12">
    <div class="flex justify-end pt-11 pb-3">
      <%= theme_button new_project_path, 'NEW'  %>
    </div>
    <div class="p-6 m-auto h-5 border-t border-black"></div>
  </div>
  <div class="container m-auto p-6">
    <div class="grid grid-cols-1 sm:grid-cols-2  
                lg:grid-cols-3 gap-5 grid-flow-row relative ">
    <% @projects.each do |project| %>
      <%= link_to project_path(project), class: 'card' do  %>
        <div class="block justify-between p-4 leading-normal">
          <div class="pt-16"></div>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= project.title%></h5>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= project.description %></p>
          <div>
          <% project.users.each do |user| %>
            <% if user.avatar.attached? %>
              <%= image_tag(user.avatar.variant(resize_to_limit: [40, 40]) , size:'40x40' , class:'rounded-full' )%>
            <% else %>
              <% if user.imageurl == nil%>
                <%= image_tag('default_user' , size:'40x40' , class:'rounded-full')%>
              <% else %>
                <%= image_tag(user.imageurl , size:'40x40' , class:'rounded-full')%>
              <% end %>
            <% end %>
          <% end %>
        </div>
        </div>
        
      <% end %>
    <% end %>
    </div>
  </div>
</section>

