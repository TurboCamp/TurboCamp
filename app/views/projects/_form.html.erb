<div class="border-gray-400 m-auto p-8 block w-auto" , data-controller="preview">
  <%= form_with(model: @project , class:"contents w-full max-w-lg") do |form| %>
    <div>
        <div class="flex flex-wrap justify-center mb-3">
            <div class="rounded-full w-40 h-40 overflow-x-hidden overflow-y-hidden mb-2">
                <%= image_tag("book" ,data: { preview_target: "output" } , class:"w-full h-full")%>
            </div>
            <%= form.file_field :image ,class:'w-full',data: {preview_target: "input", action:"change->preview#readURL"}%>
    </div>
    <div class="w-full px-3 mb-6 md:mb-0">
        <div>
            <%= form.label :title , "專案名稱"  , class:"block tracking-wide text-gray-700 text-xs font-bold mb-2 text-lg"%>
            <%= form.text_field :title , class:"block w-full bg-gray-50 text-gray-700 border border-gray-100 rounded py-3 px-4 mb-3 leading-tight"%>
        </div>
    </div>
    <div class="w-full px-3">
        <div>
            <%= form.label :description , "專案描述" , class:"block tracking-wide text-gray-700 text-xs font-bold mb-2 text-lg"%>
            <%= form.text_area :description , class:"block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-100 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white ", placeholder: "Your content..." %>
        </div>
    </div>
    <div class="flex justify-end mt-5 pl-1">
        <%= form.submit "新增專案" ,class:"theme-fill-btn"%>
    </div>
  <% end %>
</div>
