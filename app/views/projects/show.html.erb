<div class="px-28 py-10 h-full min-w-0 overflow-x-hidden max-h-screen bg-theme-5">
  <div class="main-container">
    <div class="m-auto w-full flex justify-between">
      <h1 class="text-5xl mb-3 font-semibold text-gray-700"><%= @project.title %></h1>
    </div>
    <div class="font-medium text-gray-400 py-4">
      <p><%= @project.description %></p>
    </div>
    <div class="p-4 m-auto mb-4 border-b border-gray-300">
    </div>
  </div>
  <div class="main-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 3xl:grid-cols-5 gap-7">
      <%= link_to project_todo_lists_path(@project), class: 'project-card' do %>
        <div class="flex flex-col items-center align-middle w-full p-4 h-full  ">
          <div class="feat-icon">
            <%= image_tag('icon02', size: '80x80', class: 'm-4') %>
          </div>
          <div>
            <h5 class="feat-title">Todos</h5>
          </div>
          <div>
            <p class="feat-info">Make lists of work that needs to get done, assign items, set due dates, and discuss.</p> 
          </div>
        </div>
      <% end %>
      <%= link_to project_schedules_path(@project), class: 'project-card' do %>
        <div class="flex flex-col items-center align-middle w-full p-4">
          <div class="feat-icon">
            <%= image_tag('icon04', size: '80x80', class: 'm-4') %>
          </div>
          <div>
            <h5 class="feat-title">Schedule</h5>
          </div>
          <div>
            <p class="feat-info">Set important dates on a shared schedule. Subscribe to events in Google Cal, iCal, or Outlook.</p> 
          </div>
        </div>
      <% end %>
      <%= link_to project_chat_room_path(@project), class: 'project-card' do %>
        <div class="flex flex-col items-center align-middle w-full p-4">
          <div class="feat-icon">
            <%= image_tag('icon03', size: '80x80', class: 'm-4') %>
          </div>
          <div>
            <h5 class="feat-title">Chatroom</h5>
          </div>
          <div>
            <p class="feat-info">Chat casually with the group, ask random questions, and share stuff without ceremony.</p> 
          </div>
        </div>
      <% end %>
      <%= link_to project_messages_path(@project) , class: 'project-card' do %>
        <div class="flex flex-col items-center align-middle w-full p-4">
          <div class="feat-icon">
            <%= image_tag('icon01', size: '80x80', class: 'm-4') %>
          </div>
          <div>
            <h5 class="feat-title">Message Boards</h5>
          </div>
          <div>
            <p class="feat-info">Post announcements, pitch ideas, progress updates, etc. and keep feedback on-topic.</p> 
          </div>
        </div>
      <% end %>
      <%= link_to project_bucket_path(@project) , class: 'project-card' do %>
        <div class="flex flex-col items-center align-middle w-full p-4">
          <div class="feat-icon">
            <%= image_tag("icon05", size: '80x80', class: 'm-4') %>
          </div>
          <div>
            <h5 class="feat-title">Upload</h5>
          </div>
          <div>
            <p class="feat-info">Share docs, files, images, and spreadsheets. Organize in folders so theyâ€™re easy to find.</p> 
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


